.user{
  width: 85%;
  height: 250rpx;
  /* border: 1px solid; */
  margin: 40rpx auto;
  margin-bottom: 80rpx;
  border-radius: 10px;
  box-shadow: 0 0 10px 0 rgba(0,33,79,0.11);
  background-color: rgb(198, 237, 255);
}
.head{
  width: 100rpx;
  height: 100rpx;
  border: 1px solid;
  border-radius: 50%;
  margin: 1rpx auto;
  overflow: hidden;
}
.user_text{
  width: 100px;
  height: 20px;
  border: 1px solid;
  margin: 5px auto;
  text-align: center;
}